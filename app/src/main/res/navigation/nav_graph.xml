<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.deniskishkovich.geofications.ui.main.MainFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_main">
        <action
            android:id="@+id/action_mainFragment_to_geoficationDetailsFragment"
            app:destination="@id/geoficationDetailsFragment"
            app:popUpToInclusive="false" />
    </fragment>
    <fragment
        android:id="@+id/geoficationDetailsFragment"
        android:name="com.deniskishkovich.geofications.ui.details.GeoficationDetailsFragment"
        android:label="{appbar_title}">
        <argument
            android:name="geoficationID"
            app:argType="long" />
        <argument
            android:name="appbar_title"
            app:argType="string" />
    </fragment>
</navigation>